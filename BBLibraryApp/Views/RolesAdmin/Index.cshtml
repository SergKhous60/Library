@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "Roles";
}
<h2>Roles</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (Model.Count() != 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit"
                       asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-sm btn-outline-info" asp-action="Details"
                       asp-route-id="@item.Id">Details</a>
                    <a class=" btn btn-sm btn-outline-danger" asp-action="Delete"
                       asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </table>
}

