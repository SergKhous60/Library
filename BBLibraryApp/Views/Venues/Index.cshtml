@model IEnumerable<BBLibraryApp.Models.Venue>

@{
    ViewData["Title"] = "Venues";
}

<h1>Venues</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VenueName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VenueName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShortComments)
            </td>
            <td>
                <a class="btn btn-sm btn-outline-primary" asp-action="Edit"
                   asp-route-id="@item.ID">Edit</a>
                <a class="btn btn-sm btn-outline-info" asp-action="Details"
                   asp-route-id="@item.ID">Details</a>
                <a class=" btn btn-sm btn-outline-danger" asp-action="Delete"
                   asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
