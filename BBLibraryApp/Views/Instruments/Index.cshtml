@model IEnumerable<Instrument>

@{
    ViewData["Title"] = "Instrument List";
}

<h2>Instrumentation</h2>

<p>
    <a asp-action="Create" asp-route-nextScoreOrderNumber="@ViewBag.NextScoreOrderNumber">Create New</a>
</p>
<table class="table table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ScoreOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InstrumentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsInDefaultSet)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.ScoreOrder)</td>
            <td>
                @Html.DisplayFor(modelItem => item.InstrumentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsInDefaultSet)
            </td>
            <td>
                <a class="btn btn-sm btn-outline-primary" asp-action="Edit"
                   asp-route-id="@item.ID">Edit</a>
                <a class="btn btn-sm btn-outline-info" asp-action="Details"
                   asp-route-id="@item.ID">Details</a>
                <a class=" btn btn-sm btn-outline-danger" asp-action="Delete"
                   asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
