@model Chart

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Chart</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="ShelfNumber" class="control-label"></label>
                <input asp-for="ShelfNumber" class="form-control" />
                <span asp-validation-for="ShelfNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChartName" class="control-label"></label>
                <input asp-for="ChartName" class="form-control" />
                <span asp-validation-for="ChartName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Composer" class="control-label"></label>
                <input asp-for="Composer" class="form-control" />
                <span asp-validation-for="Composer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Arranger" class="control-label"></label>
                <input asp-for="Arranger" class="form-control" />
                <span asp-validation-for="Arranger" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecordingUrl" class="control-label"></label>
                <input asp-for="RecordingUrl" class="form-control" />
                <span asp-validation-for="RecordingUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Minutes" class="control-label"></label>
                <input asp-for="Minutes" class="form-control" />
                <span asp-validation-for="Minutes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seconds" class="control-label"></label>
                <input asp-for="Seconds" class="form-control" />
                <span asp-validation-for="Seconds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Instrumentation</label>
                <hr />
                <div class="custom-control custom-checkbox mb-3">
                        <input type="checkbox" class="custom-control-input check" id="checkAll">
                    <label class="custom-control-label"for="checkAll"><strong>Check All</strong></label>
                </div>
                    @{
                        List<InstrumentViewModel> instruments = ViewBag.Instrumentation;

                        foreach (var instrument in instruments)
                        {
                            
                                <div class="custom-control custom-checkbox check mb-2">
                                    <input id="@instrument.InstrumentID"
                                           type="checkbox"
                                           name="selectedInstruments"
                                           value="@instrument.InstrumentID"
                                           class="custom-control-input check"
                                           checked="@instrument.Assigned"/>
                                    <label class="custom-control-label" for="@instrument.InstrumentID">@instrument.Name</label>
                                </div>
                            
                        }
                    }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/js/checkAll.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
